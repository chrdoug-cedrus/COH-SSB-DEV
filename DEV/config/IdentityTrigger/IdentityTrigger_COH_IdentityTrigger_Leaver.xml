<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE IdentityTrigger PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<IdentityTrigger handler="sailpoint.api.WorkflowTriggerHandler" name="COH_IdentityTrigger_Leaver" type="Rule">
  <Description>Disable all accounts when a user leaves.</Description>
  <HandlerParameters>
    <Attributes>
      <Map>
        <entry key="workflow" value="COH_Workflow_Leaver"/>
      </Map>
    </Attributes>
  </HandlerParameters>
  <TriggerRule>
    <Reference class="sailpoint.object.Rule" name="COH_Rule_IdentityTrigger_Leaver v3"/>
  </TriggerRule>
</IdentityTrigger>